using Gtk 4.0;
using Adw 1;

Adw.Bin volcon {
  height-request: 230;

  Box {
    Revealer revealer {
      reveal-child: false;
      transition-type: slide_right;

      Box {
        Label {
          label: "Equalizer here";
        }

        Separator {
          margin-end: 4;
        }
      }
    }

    Box {
      spacing: 4;
      orientation: vertical;

      ToggleButton equalaizer_button {
        styles [
          "flat"
        ]

        icon-name: "sound-wave-alt-symbolic";
      }

      Button volume_inc_button {
        styles [
          "flat"
        ]

        icon-name: "plus-symbolic";
      }

      Scale volume_level_scale {
        orientation: vertical;
        vexpand: true;
        inverted: true;

        adjustment: Adjustment {
          lower: 0.0;
          value: 100.0;
          upper: 100.0;
          step-increment: 5.0;
          page-increment: 5.0;
          page-size: 1.0;
        };
      }

      Button volume_dec_button {
        styles [
          "flat"
        ]

        icon-name: "minus-symbolic";
      }
    }
  }
}

template $CassetteVolumeButton: $CassetteCustomMenuButton {
  styles [
    "flat"
  ]

  icon-name: "audio-volume-high-symbolic";
}
